{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AwsSecurityAuditToolkitReadOnly",
      "Effect": "Allow",
      "Action": [
        "acm:DescribeCertificate",
        "acm:ListCertificates",
        "ec2:Describe*",
        "ecs:DescribeClusters",
        "ecs:ListClusters",
        "eks:DescribeCluster",
        "eks:ListClusters",
        "iam:ListAccessKeys",
        "iam:ListMFADevices",
        "iam:ListUsers",
        "kms:DescribeKey",
        "kms:GetKeyRotationStatus",
        "kms:ListAliases",
        "kms:ListKeys",
        "rds:DescribeDBInstances",
        "route53:GetDNSSEC",
        "route53:ListHostedZones",
        "s3:GetBucketAcl",
        "s3:GetEncryptionConfiguration",
        "s3:GetBucketPublicAccessBlock",
        "s3:ListAllMyBuckets",
        "ssm:DescribeInstanceInformation"
      ],
      "Resource": "*"
    }
  ]
}
